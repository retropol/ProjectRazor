@page
@model ProjectRazor.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit Employee";
}

<div class="container mt-4">
    <h1 class="mb-4">Edit Employee</h1>

    <form method="post" class="card p-4 shadow-sm">
        <input type="hidden" asp-for="Employee.Id" />

        <div class="row mb-3">
            <label asp-for="Employee.Name" class="col-sm-2 col-form-label fw-bold">Name</label>
            <div class="col-sm-10">
                <input asp-for="Employee.Name" class="form-control" placeholder="Enter employee name" />
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Employee.Email" class="col-sm-2 col-form-label fw-bold">Email</label>
            <div class="col-sm-10">
                <input asp-for="Employee.Email" class="form-control" placeholder="Enter email address" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Employee.PhotoPath" class="col-sm-2 col-form-label fw-bold">Photo Path</label>
            <div class="col-sm-10">
                <input asp-for="Employee.PhotoPath" class="form-control" placeholder="Enter photo path" />
                <span asp-validation-for="Employee.PhotoPath" class="text-danger"></span>
            </div>
        </div>

        <div class="row mb-3">
            <label asp-for="Employee.Department" class="col-sm-2 col-form-label fw-bold">Department</label>
            <div class="col-sm-10">
                <select asp-for="Employee.Department" class="form-select">
                    <option value="">Select Department</option>
                    <option value="HR">Human Resources</option>
                    <option value="IT">Information Technology</option>
                    <option value="Finance">Finance</option>
                    <option value="Muhasebe">Muhasebe</option>
                    <!-- Diğer departmanlar eklenebilir -->
                </select>
                <span asp-validation-for="Employee.Department" class="text-danger"></span>
            </div>
        </div>

        <div class="d-flex justify-content-end gap-2 mt-4">
            <button type="submit" class="btn btn-primary px-4">Save Changes</button>
            <a asp-page="./Index" class="btn btn-outline-secondary px-4">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}