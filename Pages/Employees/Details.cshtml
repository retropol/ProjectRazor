@page "{id}"
@model ProjectRazor.Pages.Employees.DetailsModel
@{
}
<h1>Details</h1>

<div class="row">

    <div class="col-md-3 mb-2">
        <div class="card">

            <img src="~/img/@Model.Employee.PhotoPath" class="card-img-top" />
            <div class="card-body">
                <h5 class="card-title">@Model.Employee.Name</h5>
                <p class="card-text">@Model.Employee.Department</p>
                <p class="card-text">@Model.Employee.Email</p>
                <a asp-page="/Employees/Index" class=" btn btn-primary">Back</a>

            </div>
        </div>

    </div>
</div>
